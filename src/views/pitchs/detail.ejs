<%- include("../partials/head", {styles: ['header-navbar-footer', 'detail-pitchs' ], title: 'Detail pitchs' }) %>

    <body>
        <%- include("../partials/header") %>
            <section class="sectMain">
                <article class="container">
                    <div class="namePitch">
                        <h2>
                            <%= locals.pitch && pitch.name %>
                        </h2>
                    </div>
                    <div class="imgPitch">
                        <img src="/img/pitchs/<%= locals.pitch && pitch.img %>" alt="pitch-img">
                        <div class="descriptionPitch">
                            <p>
                                <%= locals.pitch && pitch.description %>
                            </p>
                        </div>
                        <div class="descriptionPitch">
                            <p>
                                <%= locals.pitch && pitch.phone %>
                            </p>
                        </div>
                        <div class="descriptionPitch">
                            <p>
                                <%= locals.pitch && pitch.email %>
                            </p>
                        </div>
                        <div class="descriptionPitch">
                            <p>
                                <%= locals.pitch && pitch.countries_id%>
                            </p>
                        </div>
                        <div class="pricePitch">
                            <p>Precio: <%= locals.pitch && pitch.hours_price %></p>
                        </div>
                    </div>
                </article>
                
                <!-- FORMULARIO DE RESERVA  -->

                <form action="/pitchs/reserve/<%= locals.pitch && pitch.id %>" method="POST" enctype="multipart/form-data" class="">
                <section class="dateHourPitch">
                    <article class="datePitch">
                        <label for="init_date">Dia</label>
                        <input type="date"  name="init_date" id="init_date">
                            <label for="start_date">Inicio</label>
                                <select name="start_date" id="start_date">
                                    <option value="13:00:00" >13:00:00</option>
                                    <option value="14:00:00" >14:00:00</option>
                                    <option value="15:00:00" >15:00:00</option>
                            </select>
                            <label for="end_date">Finalizaci√≥n</label>
                                <select name="end_date" id="end_date">
                                    <option value="14:00:00">14:00:00</option>
                                    <option value="15:00:00">15:00:00</option>
                                    <option value="16:00:00">16:00:00</option>
                            </select>
                    </article>
                </section>
                <div class="buttonReserv">
                    <button type="submit">Reservar</button>
                </div>
                </form>
                    
                </section>
                

                <div class="editDestroy">
                    <a href="/pitchs/edit/<%= pitch.id %>" class="">Editar</a>
                    <form action="/pitchs/<%= pitch.id %>?_method=DELETE" method="POST" style="display: inline-flex">
                        <button type="submit" class="">Eliminar</button>
                </div>
            </section>
            <%- include("../partials/footer") %>
    </body>

    </html>