<%- include("../partials/head", {styles: ['header-navbar-footer', 'user-style'], title: 'Login'}) %>

<body>
    <main>
        <!-- Header -->
        <%- include("../partials/header") %>
        <!-- /Header -->

        <div class="mainForm">
            <div>
                <h3>Formá parte de nuestra comunidad y competí contra tus amigos</h3>
            </div>

                <form action="/user/login" method="POST" enctype="multipart/form-data" class="">
                    <h4>Login</h4>
                    <div>
                    <label for="firstName">Nombre</label><br>
                    <input 
                    type="text" 
                    id="firstName" 
                    name="firstName" 
                    value="<%= locals.oldData ? oldData.firstName : null %>"
                    class="<%= locals.errors && errors.firstName ? 'is-invalid' : null  %>">
                    
                    <% if (locals.errors && errors.firstName) { %>
                        <div>
                            <%= errors.firstName.msg %>
                        </div>  
                    <% } %>
                </div>
                <div>
                    <label for="password">Contraseña</label><br>
                    <input type="password" id="password" name="password" placeholder="">
                </div>
                <div>
                    <button type="reset" id="reset">Borrar</button>
                    <button type="submit" id="submit">Enviar</button>
                </div>
        </div>
    </form>
    </main>
    <!-- footer  -->
    <%- include("../partials/footer") %>
    <!-- /footer -->
</body>

</html>