<%- include("../partials/head", {styles: ['header-navbar-footer', 'profile-users' ], title: 'Profile'}) %>
<body>
    <main>
    <!-- Header -->
    <%- include("../partials/header") %>
    <!-- /Header -->

        <h1 class="firstText"> Perfil </h1>
        <h2>
            <%= locals.user && user.firstName %>
            <%= locals.user && user.lastName %>
        </h2>
        <div class="imgProfile">
            <img src="/img/users/<%= locals.user && user.imgPerfil %>" alt="user-img">
        </div>


        <div>
            <p>Posicion: </p>
            <%= locals.user && user.position %>
        </div>





        <div class="editDestroy">
            <a href="/user/edit/<%= user.id %>" class="">EDITAR USUARIO</a>
            <form action="/user/<%= user.id %>?_method=DELETE" method="POST" style="display: inline-flex">
                <button type="submit" class="">ELIMINAR USUARIO</button>
        </div>
</main>
<!-- footer  -->
<%- include("../partials/footer"), {styles: ['', '']} %>
<!-- /footer -->
</body>
</html>