<%- include("../partials/head", {styles: ['header-navbar-footer', 'user-style'], title: 'Register'}) %>

<body>
    <main>
        <!-- Header -->
        <%- include("../partials/header") %>
        <!-- /Header -->

        <div class="mainForm">
            <div>
                <h3>Formá parte de nuestra comunidad y competí contra tus amigos</h3>
            </div>

                <form action="/user/register" method="POST" enctype="multipart/form-data" class="">
                    <h4>Creá tu cuenta</h4>
                    <div>
                    <label for="first_name">Nombre</label><br>
                    <input 
                    type="text" 
                    id="first_name" 
                    name="first_name" 
                    value="<%= locals.oldData ? oldData.first_name : null %>"
                    class="<%= locals.errors && errors.first_name ? 'is-invalid' : null  %>">
                    
                    <% if (locals.errors && errors.first_name) { %>
                        <div>
                            <%= errors.first_name.msg %>
                        </div>  
                    <% } %>
                </div>
                
                <div>
                    <label for="last_name">Apellido</label><br>
                    <input type="text" 
                    id="last_name" 
                    name="last_name" 
                    value="<%= locals.oldData ? oldData.last_name : null %>">
                    
                    <% if (locals.errors && errors.last_name) { %>
                        <div>
                            <%= errors.last_name.msg %>
                        </div> 
                    <% } %>
                </div>
                <div>
                    <label for="age">Edad</label><br>
                    <input type="number"
                    id="age" 
                    name="age" 
                    value="<%= locals.oldData ? oldData.age : null %>">
                    
                    <% if (locals.errors && errors.age) { %>
                        <div>
                            <%= errors.age.msg %>
                        </div> 
                    <% } %>
                </div>
                <div>
                    <label for="genre">Genero</label><br>
                    <select name="genre"
                    id="genre">
                        <option value="Hombre">Hombre</option>
                        <option value="Mujer">Mujer</option>
                    </select>
                </div>
                <div>
                    <label for="email">Email</label><br>
                    <input type="email"
                    id="email" 
                    name="email" 
                    value="<%= locals.oldData ? oldData.email : null %>">
                    
                    <% if (locals.errors && errors.email) { %>
                        <div>
                            <p><%= errors.email.msg %></p>
                        </div> 
                    <% } %>
                </div>
                <div>
                    <label for="phone">Número de contacto</label><br>
                    <input type="number" 
                    id="phone" 
                    name="phone" 
                    placeholder="Sin 0 ni 15" 
                    value="<%= locals.oldData ? oldData.phone : null %>">
                    
                    <% if (locals.errors && errors.phone) { %>
                        <div>
                            <%= errors.phone.msg %>
                        </div> 
                    <% } %>
                </div>
                <div>
                    <label for="countries_id">Ciudad</label><br>
                    <select name="countries_id" 
                    id="countries_id">
                        <option value="1">Rosario</option>
                        <option value="2">Baigorria</option>
                        <option value="3">San Pedro</option>
                    </select>
                </div>
                <div>
                    <label for="positions_id">Posicion</label>
                    <select name="positions_id" 
                    id="positions_id">
                        <option value="1">Arquero</option>
                        <option value="2">Defensor</option>
                        <option value="3">Delantero</option>
                    </select>
                </div>
                <div class="imgField">
                    <label for="img">Imagen de perfil</label><br>
                    <input type="file" name="img" id="img">
                </div>
                <div>
                    <label for="password">Contraseña</label><br>
                    <input type="password" id="password" name="password" placeholder="">
                </div>
                <div>
                    <button type="reset" id="reset">Borrar</button>
                    <button type="submit" id="submit">Enviar</button>
                </div>     
        </div>
    </form>
    </main>
    <!-- footer  -->
    <%- include("../partials/footer") %>
    <!-- /footer -->
</body>

</html>